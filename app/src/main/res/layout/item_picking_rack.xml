<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#d9d9d9"
    >
    <!--拣货下架listview-->
    <LinearLayout
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <!--android:text="货位:"-->
        <TextView
            android:id="@+id/tv_goods_loc"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <!--android:text="单位:"-->
        <TextView
            android:id="@+id/tv_danw"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <!--android:text="名称:"-->
        <TextView
            android:id="@+id/tv_name"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <!--android:text="条码:"-->
        <TextView
            android:id="@+id/tv_tma"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <!--android:text="应拣数量:"-->
        <TextView
            android:id="@+id/tv_sel_sl"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <!--android:text="扫描数量:"-->
        <EditText
            android:id="@+id/et_smsl"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <!--android:text="规格:"-->
        <TextView
            android:id="@+id/tv_size"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <!--android:text="备注:"-->
        <TextView
            android:id="@+id/tv_log"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>